// schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String? @unique
  username String?
  password String?
  name String?
  surname String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  role Role @default(USER)
}

model Food {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

enum Role {
  USER
  ADMIN
}
